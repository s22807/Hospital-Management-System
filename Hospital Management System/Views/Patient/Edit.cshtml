@{
}
@using HospitalManagementSystem.Application.Models;
@model PatientDTO


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="pesel">PESEL (11 digits):</label>
        <input asp-for="Pesel" type="text" class="form-control" pattern="[0-9]{11}" required />
    </div>

    <div class="form-group">
        <label asp-for="Birthdate"></label>
        <input asp-for="Birthdate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="sex">Sex:</label>
        <select class="form-control" id="sex" name="sex" required>
            <option value="@false">Male</option>
            <option value="@true">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MothersName"></label>
        <input asp-for="MothersName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FathersName"></label>
        <input asp-for="FathersName" class="form-control" />
    </div>

    <!-- Add fields for other properties as needed -->

    <button type="submit" class="btn btn-primary">Update</button>
</form>