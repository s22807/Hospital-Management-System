@using HospitalManagementSystem.Application.Models;
@model PatientDetailsDTO


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Pesel"></label>
        <input asp-for="Pesel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Birthdate"></label>
        <input asp-for="Birthdate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sex"></label>
        <select asp-for="Sex" class="form-control">
            <option value="true" selected>Male</option>
            <option value="false">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MothersName"></label>
        <input asp-for="MothersName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FathersName"></label>
        <input asp-for="FathersName" class="form-control" />
    </div>

    <!-- Add fields for other properties as needed -->

    <button type="submit" class="btn btn-primary">Update</button>
</form>