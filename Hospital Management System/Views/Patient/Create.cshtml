@using HospitalManagementSystem.Application.Models;
@model PatientDTO

<form asp-action="Create">
    <div class="form-group">
        <label for="firstName">First Name:</label>
        <input type="text" class="form-control" asp-for="FirstName" required />
    </div>
    <div class="form-group">
        <label for="lastName">Last Name:</label>
        <input type="text" class="form-control" asp-for="LastName" required />
    </div>
    <div class="form-group">
        <label for="pesel">PESEL (11 digits):</label>
        <input type="text" class="form-control" asp-for="Pesel" pattern="[0-9]{11}" required />
    </div>
    <div class="form-group">
        <label for="birthDate">Birth Date:</label>
        <input type="date" class="form-control" asp-for="Birthdate" required />
    </div>
    <div class="form-group">
        <label for="sex">Sex:</label>
        <select class="form-control" asp-for="Sex" required>
            <option value="@false">Male</option>
            <option value="@true">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label for="MothersName">MothersName</label>
        <input type="text" class="form-control" asp-for="MothersName"/>
    </div>
    <div class="form-group">
        <label for="FathersName">FathersName</label>
        <input type="text" class="form-control" asp-for="FathersName" />
    </div>
    <div class="form-group">
        <label for="Insured">Insured</label>
        <select for="Insured" class="form-control" asp-for="Insured">
            <option value="@true">Yes</option>
            <option value="@false">No</option>
        </select>
    </div>
    <!-- Add other fields for creating a new patient -->

    <button type="submit" class="btn btn-primary">Create</button>
</form>