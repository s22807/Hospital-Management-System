@{
}
@using HospitalManagementSystem.Application.Models;
@model IEnumerable<TagDTO>

@{
    ViewData["Title"] = "Tag Index";
}

<h2>Tag Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td>@tag.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@tag.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
